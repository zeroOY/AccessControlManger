<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yang.mapper.DeviceMapper">
    <select id="getCount" resultType="int">
        SELECT COUNT(*) FROM access_control_device d
        INNER JOIN buiding b ON d.hospital_id=b.id
        <where>
            <if test="hotId!=-1">
                and d.hospital_id=#{hotId}
            </if>
        </where>
    </select>
    <select id="getDeviceLimit" resultType="com.yang.pojo.Device">
        SELECT d.*,b.name FROM access_control_device d
        INNER JOIN buiding b ON d.hospital_id=b.id
        <where>
            <if test="hotId!=-1">
                and d.hospital_id=#{hotId}
            </if>
        </where>
        order by d.add_time desc
        limit #{form},#{pageSize}
    </select>
    <update id="update" parameterType="long">
        update access_control_device
        <set>
            <if test="status==0">
                status=1,
            </if>
            <if test="status==1">
                status=0,
            </if>
            <if test="status==null and status==''">
                status=0,
            </if>
        </set>
        where id=#{id}
    </update>
<insert id="insert" parameterType="com.yang.pojo.Device">
    insert into access_control_device values(null,#{principal},#{supplier},#{brand},#{hospital_id},0,#{add_time})
</insert>
</mapper>
